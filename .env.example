# Database
DATABASE_URL=postgresql://homestead:homestead@localhost:5432/homestead

# JWT — generate with: node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
JWT_ACCESS_SECRET=change-me-access-secret-at-least-32-chars
JWT_REFRESH_SECRET=change-me-refresh-secret-at-least-32-chars

# Server
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Docker production (used by docker-compose.prod.yml)
POSTGRES_USER=homestead
POSTGRES_PASSWORD=homestead
POSTGRES_DB=homestead
HTTP_PORT=80

# TURN server (optional — only needed for remote/NAT traversal)
# TURN_URL=turn:your-server-ip:3478
# TURN_USER=homestead
# TURN_PASSWORD=change-me-turn-password

# VPS / SSL (required for remote deployment)
# DOMAIN=homestead.example.com
# SSL_EMAIL=you@example.com
